{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to debugpy session",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspaces/isaac_arena"
                }
            ]
        }
    ]
}
