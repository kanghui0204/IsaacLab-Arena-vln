{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to debugpy session",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspaces/isaac_arena"
                }
            ]
        },
        {
            "name": "Python: Generate Dataset",
            "type": "python",
            "request": "launch",
            "args" : ["--enable_cameras",
            "--mimic",
            "--input_file", "${workspaceFolder}/isaaclab_arena/datasets/dataset_v1_annotated.hdf5",
            "--output_file", "${workspaceFolder}/isaaclab_arena/datasets/dataset_v1_generated.hdf5",
            "--generation_num_trials", "100",
            "--device", "cpu",
            "fii_pick_place"],
            "program": "${workspaceFolder}/isaaclab_arena/scripts/generate_dataset.py",
            "console": "integratedTerminal"
        }
    ]
}
